    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
         

    }                                           

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
                                         
   String nama = jTextField1.getText();
    String nik = jTextField2.getText();
    String tglLahir = jTextField3.getText();
    String alamat = jTextField4.getText();

    // Validasi data sebelum menambahkannya ke tabel
    if (nama.isEmpty() || nik.isEmpty() || tglLahir.isEmpty() || alamat.isEmpty()) {
        JOptionPane.showMessageDialog(this, "Harap isi semua kolom data.", "Error", JOptionPane.ERROR_MESSAGE);
        return;
    }

    // Konversi tanggal ke format yang sesuai
    SimpleDateFormat dateFormat = new SimpleDateFormat("yyyy-MM-dd");
    Date tglLahirDate;
    try {
        tglLahirDate = dateFormat.parse(tglLahir);
    } catch (ParseException ex) {
        JOptionPane.showMessageDialog(this, "Format tanggal salah. Gunakan format YYYY-MM-DD.", "Error", JOptionPane.ERROR_MESSAGE);
        return;
        
    }

    // Tambahkan data ke dalam model tabel
    tableModel.addRow(new Object[]{nama, nik, dateFormat.format(tglLahirDate), alamat});

    // Kosongkan field input setelah data ditambahkan
    jTextField1.setText("");
    jTextField2.setText("");
    jTextField3.setText("");
    jTextField4.setText("");
       
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int selectedRow = jTable4.getSelectedRow();
    if (selectedRow != -1) {
        String nama = jTextField1.getText();
        String nik = jTextField2.getText();
        String tglLahir = jTextField3.getText();
        String alamat = jTextField4.getText();

        // Update data pada baris yang dipilih
        model.setValueAt(nama, selectedRow, 0);
        model.setValueAt(nik, selectedRow, 1);
        model.setValueAt(tglLahir, selectedRow, 2);
        model.setValueAt(alamat, selectedRow, 3);

        // Kosongkan inputan setelah data diupdate
        jTextField1.setText("");
        jTextField2.setText("");
        jTextField3.setText("");
        jTextField4.setText("");
    }
    }                                        


